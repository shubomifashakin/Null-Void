generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Provider {
  google
}

model Users {
  id String @id @default(uuid())
  email String @unique
  name String
  picture String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  accounts Accounts[]
  refresh_tokens RefreshTokens[]
  
}

model Accounts {
  id String @id @default(uuid())
  user_id String
  user Users @relation(fields: [user_id], references: [id])
  provider Provider
  provider_id String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model RefreshTokens {
  id String @id @default(uuid())
  user_id String
  user Users @relation(fields: [user_id], references: [id])
  token_id String @unique
  expires_at DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}