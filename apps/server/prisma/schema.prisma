generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Provider {
  google
}

enum Roles {
  ADMIN
  VIEWER
  EDITOR
}

enum InviteStatus {
  PENDING
  ACCEPTED
  REJECTED
}

model Users {
  id String @id @default(uuid())
  email String @unique
  name String
  picture String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  rooms Rooms[]
  accounts Accounts[]
  members RoomMembers[]
  refresh_tokens RefreshTokens[]
  invites Invites[]
}

model Accounts {
  id String @id @default(uuid())
  user_id String
  user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)
  provider Provider
  provider_id String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model RefreshTokens {
  id String @id @default(uuid())
  user_id String
  user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)
  token_id String @unique
  expires_at DateTime
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Rooms {
  id String @id @default(uuid())

  name String @db.VarChar(20)
  description String? @db.VarChar(100)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  owner_id String?
  owner Users? @relation(fields: [owner_id], references: [id], onDelete: SetNull)

  members RoomMembers[]
  invites Invites[]
}

model RoomMembers {
  id String @id @default(uuid())

  role Roles

  room_id String
  room Rooms @relation(fields: [room_id], references: [id], onDelete: Cascade)

  user_id String
  user Users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@unique([room_id, user_id])
}

model Invites {
  id String @id @default(uuid())

  status InviteStatus @default(PENDING) 

  email String 
  
  inviter_id String
  inviter Users @relation(fields: [inviter_id], references: [id], onDelete: Cascade)

  role Roles

  room_id String
  room Rooms @relation(fields: [room_id], references: [id], onDelete: Cascade)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}
